<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane fx:id="taskViewGridPane" HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="dueDate" styleClass="cell_small_label" text="\$phone" />
      <Label fx:id="remainingTime" styleClass="cell_small_label" text="\$remainingTime" />
      <Label fx:id="description" styleClass="cell_small_label" text="\$address" />
      <Label fx:id="priorityValue" styleClass="cell_small_label" text="\$email" />
      <Label fx:id="status" styleClass="cell_small_label" text="\$status" />
      <Label fx:id="hash" styleClass="cell_small_label" text="\$hash" />
      <Label fx:id="dependency" styleClass="cell_small_label" text="\$dependency" />
    </VBox>
  </GridPane>
</HBox>

